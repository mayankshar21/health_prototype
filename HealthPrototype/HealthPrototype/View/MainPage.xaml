<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthPrototype.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Text="Total steps today: " 
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label Grid.Row="1" Text="Total meters walked today: " 
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label Grid.Row="2" Text="Total exercise duration today: " 
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label Grid.Row="3" Text="Total active calories burned today: " 
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

    </Grid>
</ContentPage>
